@model IEnumerable<gp2_project.Models.payment>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.orderNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.nameOnCard)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.bankAccNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.total)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.orderNo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.nameOnCard)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.bankAccNo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.total)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
